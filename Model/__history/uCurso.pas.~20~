unit uCurso;

interface

uses sysUtils;

type
  TCurso = class
  private
    FID: integer;
    FNome: string;
    FPreço: currency;
    FSala1: string;
    FSala2: string;
    FSala3: string;
    FSala4: string;
    FSala5: string;
  public
    property ID: integer read FID write FID;
    property Nome: string read FNome write FNome;
    property Preco: currency Read FPreço write FPreço;
    var salas: array[0..4] of string;
  end;

implementation

end.
